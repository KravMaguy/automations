{
  "manifest_version": 3,
  "name": "Action Logger and Automator",
  "version": "1.0",
  "description": "Logs and automates user actions on web pages.",
  "permissions": ["tabs", "storage", "webNavigation", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
