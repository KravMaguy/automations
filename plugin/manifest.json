{
  "manifest_version": 3,
  "name": "automations",
  "version": "1.0",
  "description": "web automations",
  "permissions": ["tabs", "storage", "webNavigation", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "public/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/popup.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
